<hibernate-configuration>
    <session-factory>
        <!--  Database connection settings  -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/car_rental_test?createDatabaseIfNotExist=true&amp;serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <!--  JDBC connection pool (use the built-in)  -->
        <property name="connection.pool_size">10</property>
        <!--  SQL dialect  -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <!--  Disable the second-level cache   -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <!--  Echo all executed SQL to stdout  -->
        <property name="show_sql">true</property>
        <!--  Drop and re-create the database schema on startup  -->
        <!--  <property name="hbm2ddl.auto">create</property>-->
        <!--         For mapping with annotations -->
        <mapping class="infrastructure.models.Car"/>
        <mapping class="infrastructure.models.CarBrand"/>
        <mapping class="infrastructure.models.CarModel"/>
        <mapping class="infrastructure.models.CarType"/>
        <mapping class="infrastructure.models.Payment"/>
        <mapping class="infrastructure.models.User"/>
        <mapping class="infrastructure.models.M2M_UserOrder"/>
        <mapping class="infrastructure.models.M2M_OrderPayment"/>
        <mapping class="infrastructure.models.M2M_UserRole"/>
        <mapping class="infrastructure.models.Permission"/>
        <mapping class="infrastructure.models.Role"/>
    </session-factory>
</hibernate-configuration>